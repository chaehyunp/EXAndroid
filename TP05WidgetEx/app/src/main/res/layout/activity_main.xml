<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/zzanggu"
            android:layout_centerVertical="true"
            app:civ_border_width="1dp"
            app:civ_border_color="#cccccc"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zzang_9"
            android:layout_toRightOf="@+id/img_profile"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello. How are you?"
            android:layout_toRightOf="@id/img_profile"
            android:layout_below="@id/txt_name"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023.02.14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/chul"
                android:layout_marginRight="8dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#cccccc"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/yuri"
                android:layout_marginRight="8dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#cccccc"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/maeng"
                android:layout_marginRight="8dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#cccccc"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/hun"
                android:layout_marginRight="8dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#cccccc"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/buriman"
                android:layout_marginRight="8dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#cccccc"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/chae"
                android:layout_marginRight="8dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#cccccc"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/miri"
                android:layout_marginRight="8dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#cccccc"/>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_cont_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="actionzzang9"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ddukip-Maeul, kindergarden"
            android:textSize="14sp"
            android:layout_below="@+id/txt_cont_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_vert_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/cont_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_action"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ic_fav"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_favorite_24"/>

        <ImageView
            android:id="@+id/ic_chat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_chat_bubble_outline_24"
            android:layout_toRightOf="@+id/ic_fav"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:id="@+id/ic_send"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_send_24"
            android:layout_toRightOf="@+id/ic_chat"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:id="@+id/ic_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_share_24"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/txt_cont_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today ootd..."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/ic_fav"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/txt_cont_des"/>

    </RelativeLayout>



</LinearLayout>